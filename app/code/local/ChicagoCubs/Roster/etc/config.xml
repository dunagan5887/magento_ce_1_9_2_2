<?xml version="1.0"?>    <config>    
    <modules>
        <ChicagoCubs_Roster>
            <version>
                0.1.0
            </version>
        </ChicagoCubs_Roster>
    </modules>
	<global>
		<blocks>
			<chicagocubs_roster>
			<class>ChicagoCubs_Roster_Block</class>
			</chicagocubs_roster>
		</blocks>
	</global>
	<frontend>
        <routers>
           <roster> 
                <use>standard</use>
                <args>
                    <module>ChicagoCubs_Roster</module>
                    <frontName>roster</frontName>
                </args>
            </roster>
        </routers>
		<layout>
			<updates>
				<chicagocubs_roster
				  module="ChicagoCubs_Roster">
					<file>chicagocubs_roster.xml</file>
				</chicagocubs_roster>
			</updates>
		</layout>
			
    </frontend>
</config>
